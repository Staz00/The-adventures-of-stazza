using namespace std;

/*Global variables*/
char choice = 48;
string name;
bool userMove = true;
bool win = false;

//character stats
const int HITCHANCE = 80;
const int ATK = 7;
const int HP = 75;

const int itemsArray = 5;
string* items = new string [itemsArray];
int count = 0;

int hp = 75;
int atk = 7;
int def = 5;
int gold = 100;
double hitChance = 80;
string weapon = "Nothing";

//monster stats
const int MOBHP = 100;
int mobsHp = 100;
int mobsAtk = 7;
int mobsDef = 5;

//weapon stats
int upgradeCost = 30;

int weaponLevel = 0;
int bswordAtkStats = 5;
int bswordMissChance = 15;
const int bswordPrice = 100;

int cmoreAtkStats = 8;
int cmoreMissChance = 20;
const int cmorePrice = 150;

int bowAtkStats = 5;
int bowMissChance = 25;
const int bowPrice = 90;

string pot = "Potion";
int potCost = 50;
string clarity = "Clarity";
int clarCost = 50;
int potHeal = 20;
int mpHeal = 10;

//boss stats
int bossHp = 200;
int bossAtk;

//Function Declarations
void townOptions();
void menuChoice();
void displayCharStats();
void encounter();
void charMove();
void buyWeapon();
void blacksmith();
//End of Function Declaration


//base stats for character
void displayCharStats()
{
	bool confirm = false;
	cout << "These are your stats:\n" << endl;
	cout << "Your starting HP is " << hp << endl;
	cout << "Your starting Attack is " << atk << endl;
	cout << "Your starting Defense is " << def << endl;
	cout << "Your current hit chance is " << hitChance << endl;
	cout << "You are currently equipped with " << weapon << endl;
	cout << "Weapon tier : " << weaponLevel << endl;
	cout << "Your current gold is " << gold << "\n" << endl;

	char goToTownYN = 0;
	do
	{
		cout << "Go to town? (Y/N)" << endl;
		cin >> goToTownYN;
		if((goToTownYN == 89) || (goToTownYN == 121))
		{
			confirm = true;
			system("cls");
			townOptions();
			break;
		}
		else if((goToTownYN == 78) || (goToTownYN == 110))
		{
			confirm = false;
			charMove();
		}
		else
		{
			cout << "INVALID INPUT; Please try again" << endl;
		}
	}
	while(!confirm);
}

void encounter()
{
	int rng = rand() % 10 + 1;
	int hitChance = rand()% 100 + 1;
	int goldDrop = rand()% 5 + 25;
	int atkRng = rand()% 10 + atk;

	system("cls");

	char encChoice = 48;
	bool mobAlive = true;
	int menuNum = 1;
	char itemChoice = 00;

	cout << "You encountered a goblin" << endl;
	cout << "Goblin HP: " << mobsHp << endl;
	cout << "Your HP : " << hp << endl;
	cout << "\nSelect what you want to do\n1.) Normal Attack\n2.) Items\n3.) Run Away" << endl;

	
	while(mobAlive)
	{
		if(userMove)
		{
			cin >> encChoice;
			switch (encChoice)
			{
				//normal attack
				case 49:

					//normal attack rng check
					if((weapon == "Broadsword") && (hitChance > 95))
					{
						cout << "Your attack missed" << endl;
						system("pause");
						userMove = false;
						return encounter();
					}
					else if((weapon == "Broadsword") && (hitChance <= 95))
					{
						int damage = (atk + atkRng)/2;
						mobsHp = mobsHp - damage;
						cout << "You dealt " << damage << " to the enemy" << endl;
						system("pause");
					}
					else if(weapon == "Claymore")
					{
						int damage = (atk + atkRng)/2;
						mobsHp = mobsHp - damage;
						cout << "You dealt " << damage << " to the enemy" << endl;
						system("pause");
					}
					else if((weapon == "Bow") && (hitChance > 55))
					{
						cout << "Your attack missed" << endl;
						system("pause");
						userMove = false;
						return encounter();
					}
					else if((weapon == "Bow") && (hitChance <= 55))
					{
						int damage = (atk + atkRng)/2;
						mobsHp = mobsHp - damage;
						cout << "You dealt " << damage << " to the enemy" << endl;
						system("pause");
					}
					else if ((weapon == "Nothing") && (hitChance > 80))
					{
						cout << "Your attack missed" << endl;
						system("pause");
						userMove = false;
						return encounter();
					}
					else if((weapon == "Nothing") && (hitChance <= 80))
					{
						mobsHp = mobsHp - atk;
					}

					//checks if monster is dead
					if(mobsHp <= 0)
					{
						char backtoTown;
						mobAlive = false;
						cout << "\nMonster is dead !!!" << endl;
						cout << "You gained " << goldDrop  << " gold" << endl;
						gold = gold + goldDrop;
						cout << "Go back to Town? (Y/N)" << endl;
						cin >> backtoTown;
						if((backtoTown == 89) || (backtoTown == 121))
						{
							system("cls");
							mobsHp = MOBHP;
							townOptions();
						}
						else if ((backtoTown == 78) || ( backtoTown == 110))
						{
							system("cls");
							mobsHp = MOBHP;
							charMove();
						}
					}
					else
					{
						system("cls");
						userMove = false;
						return encounter();
					}
					break;

				//Items [ARRAY]
				case 50:
					system("cls");
					cout << "ITEM INVENTORY" << endl;
					for(int i = 0; i < itemsArray; i++)
					{
						cout << menuNum << ".) " << items[i] << endl;
						menuNum++;
					}
					cin >> itemChoice;
					switch(itemChoice)
					{
						case 49: case 50: case 51: case 52: case 53:
							if((items[0] == pot) || (items[0] == clarity) || (items[1] == pot) || (items[2] == clarity) || (items[3] == pot) || (items[3] == clarity) ||
								(items[4] == pot) || (items[4] == clarity)) 
							{
								hp = hp + potHeal;
								cout << "You used potion! HP + " << potHeal << endl;
								system("pause");
								items[0] = " ";
								return encounter();
							}
							else
							{
								cout << "You do not have an item in this slot" << endl;
								system("pause");
								return encounter();
							}
						default:
							cout << "INVALID INPUT" << endl;
							system("pause");
							return encounter();
					}
					break;

				//Run away
				case 51:
					if(rng >= 5)
					{
						cout << "Failed to run away" << endl;
						system("pause");
						userMove = false;
						return encounter();
					}
					else if(rng <= 4)
					{
						char backtoTown;
						cout << "You have ran away successfully" << endl;
						mobsHp = MOBHP;
						cout << "Do you want to go back to town (Y/N)" << endl;
						cin >> backtoTown;
						if((backtoTown == 89) || (backtoTown == 121))
						{
							system("cls");
							mobsHp = MOBHP;
							townOptions();
						}
						else if ((backtoTown == 78) || ( backtoTown == 110))
						{
							system("cls");
							mobsHp = MOBHP;
							charMove();
						}

					}
					break;

				//if user types in an invalid choice
				default: 
					cout << "INVALID CHOICE !!!" << endl;
					system("cls");
					return encounter();
					break;
			}
		}
		else
		{
			int atkRNG = rand() % 5 + mobsAtk;
			if(rng >= 9)
			{
				cout << "\nThe goblin has used self healing magic" << endl;
				mobsHp = mobsHp + 10;
				system("pause");
			}
			else if (rng <= 8)
			{
				int monsDamage = (mobsAtk + atkRNG)/2;
				hp = hp - monsDamage;
				cout << "\nThe enemy has dealt " << monsDamage << " to you" << endl;
				system("pause");
			}

			//check if player is dead
			if(hp < 0)
			{
				system("cls");
				cout << "\nYou died :( You will be respawning in town" << endl;
				cout << "As death penalty, you will lose 100G" << endl;
				gold = gold - 100;
				if (gold < 0)
				{
					gold = 0;
				}
				system("pause");
				townOptions();

			}

			userMove = true;
			encounter();
			
		}
	}
}

void menuChoice()
{
	char choice = 48;
	cout << "I welcome you PLAYERS to the adventure of a lifetime!!!" << endl;
	cout << "Using the most powerful graphics chip, the IMAGINATION" << endl;
	cout << "I will take you on the best adventure an imagination can give you\n" << endl;
	cout << "1.) New Game\n2.) Load Game" << endl;
	cout << "" << endl;
	cout << "Enter the number of your selection" << endl;
	cin >> choice;
	
	bool done = false;
	do
	{
		switch(choice)
		{
			case 49: system("cls");
					cout << "Enter your character name:" << endl;
					cin >> name;
					system("cls");
					cout << name << " huh? That sounds like a promising name for a hero that could change the \nhistory and save this town from the problem its having\n" << endl;
					displayCharStats();
					done = true;
					break;

			case 50: //[TODO: use iostream]
					cout << "You have successfully loaded a game file" << endl;
					done = true;
					break;
				
			case 51:
				/*char closeYN;
					cout << "Are you sure you want to exit the game (Y/N)" << endl;
					cin >> closeYN;
					if((closeYN == 89) || (closeYN == 121))
					{
						done = true;
						break;
					}
					else if ((closeYN == 78) || ( closeYN == 110))
					{
						choice = 48;
						system("cls");
						menuChoice();
					}*/
					done = true;
					win = true;
					break;
			default: system("cls"); 
					cout << "\nSorry, but " << choice << " is not a valid choice.\n";
					choice = 0;
					menuChoice();
					break;
		}
	}
	while(!done);
}

void buyWeapon()
{
	char storeChoice = 48;
	char back = 00;
	bool invalid = true;
	system("cls");

	cout << "BUY WEAPON" << endl;
	cout << "1.) Broadsword - 100" << endl;
	cout << "2.) Claymore - 150" << endl;
	cout << "3.) Bow - 90" << endl;
	cout << "4.) Switch from one weapon type to another" << endl;
	cout << "5.) Buy Merchandise" << endl;
	cout << "6.) Back to Town" << endl;

	cin >> storeChoice;

	if((storeChoice == 49) && (weapon == "Nothing"))
	{
		if(gold >= bswordPrice)
		{
			weapon = "Broadsword";
			atk = atk + bswordAtkStats;
			hitChance = hitChance + bswordMissChance;
			cout << "You have bought a Broadsword!" << endl;
			gold = gold - bswordPrice;
			if (gold < 0)
			{
				gold = 0;
			}

				cout << "Go to town? (Y/N)" << endl;
				cin >> back;
				if((back == 89) || (back == 121))
				{
					system("cls");
					townOptions();
				}
				else if((back == 78) || (back == 110))
				{
					return buyWeapon();
				}
				else
				{
					cout << "INVALID INPUT; Please try again" << endl;
				}

			system("cls");
			townOptions();
		}
		else
		{
			cout << "You do not have enough gold" << endl;
			system("pause");
			system("cls");
			townOptions();
		}
	}
	else if(storeChoice == 50 && (weapon == "Nothing"))
	{
		if (gold >= cmorePrice)
		{
			weapon = "Claymore";
			atk = atk + cmoreAtkStats;
			hitChance = hitChance + cmoreMissChance;
			cout << "You have bought a Claymore!" << endl;
			gold = gold - cmorePrice;
			if (gold < 0)
			{
				gold = 0;
			}


				cout << "Go to town? (Y/N)" << endl;
				cin >> back;
				if((back == 89) || (back == 121))
				{
					system("cls");
					townOptions();
				}
				else if((back == 78) || (back == 110))
				{
					return buyWeapon();
				}
				else
				{
					cout << "INVALID INPUT; Please try again" << endl;
				}

			system("cls");
			townOptions();
		}
		else
		{
			cout << "You do not have enough gold" << endl;
			system("pause");
			system("cls");
			return buyWeapon();
		}
	}
	else if((storeChoice == 51) && (weapon == "Nothing"))
	{
		if(gold >= bowPrice)
		{
			weapon = "Bow";
			atk = atk + bowAtkStats;
			hitChance = hitChance - bowMissChance;
			gold = gold - bowPrice;
			cout << "You have bought a Claymore!" << endl;
			if (gold < 0)
			{
				gold = 0;
			}


				cout << "Go to town? (Y/N)" << endl;
				cin >> back;
				if((back == 89) || (back == 121))
				{
					system("cls");
					townOptions();
				}
				else if((back == 78) || (back == 110))
				{
					return buyWeapon();
				}
				else
				{
					cout << "INVALID INPUT; Please try again" << endl;
				}

			system("cls");
			townOptions();
		}
		else
		{
			cout << "You do not have enough gold" << endl;
			system("pause");
			system("cls");
			return buyWeapon();
		}
	}

	//option 4
	else if((storeChoice == 52) && ((weapon == "Broadsword") || (weapon == "Claymore") || (weapon == "Bow")))
	{
		weaponLevel = 0;
		system("cls");
		char swapWeapons = 48;
		cout << "Current weapon: " << weapon << endl;
		cout << "Select the weapon you want to change to" << endl;
		cout << "1.) Broadsword - " <<  endl;
		cout << "2.) Claymore - " << endl;
		cout << "3.) Bow - " << endl;
		cin >> swapWeapons;
		switch(swapWeapons)
		{
			//broadsword
			case 49: 
				if((weapon == "Nothing") && (gold >= bswordPrice))
				{
					weapon = "Broadsword";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + bswordAtkStats;
					hitChance = hitChance + bswordMissChance;
					gold = gold - bswordPrice;
					displayCharStats();
					system("cls");
					townOptions();
				}
				else if((weapon == "Claymore") && (gold >= bswordPrice))
				{
					weapon = "Broadsword";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + bswordAtkStats;
					hitChance = hitChance + bswordMissChance;
					gold = gold - bswordPrice;
					displayCharStats();
					townOptions();
				}
				else if ((weapon == "Bow") && (gold >= bswordPrice))
				{
					weapon = "Broadsword";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + bswordAtkStats;
					hitChance = hitChance + bswordMissChance;
					gold = gold - bswordPrice;
					displayCharStats();
					townOptions();
				}
				else 
				{
					cout << "Not enough gold" << endl;
					system("pause");
					return buyWeapon();
				}
				break;
				//claymore
			case 50:
				if((weapon == "Nothing") && (gold >= cmorePrice))
				{
					weapon = "Claymore";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + cmoreAtkStats;
					hitChance = hitChance + cmoreMissChance;
					gold = gold - cmorePrice;
					displayCharStats();
					system("cls");
					townOptions();
				}
				else if((weapon == "Broadsword")  && (gold >= cmorePrice))
				{
					weapon = "Claymore";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + cmoreAtkStats;
					hitChance = hitChance + cmoreMissChance;
					gold = gold - cmorePrice;
					displayCharStats();
					townOptions();
				}
				else if ((weapon == "Bow") && (gold >= cmorePrice))
				{
					weapon = "Claymore";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + cmoreAtkStats;
					hitChance = hitChance+ cmoreMissChance;
					gold = gold - cmorePrice;
					displayCharStats();
					townOptions();
				}
				else 
				{
					cout << "Not enough gold" << endl;
					system("pause");
					return buyWeapon();
				}
				break;
				//bow
			case 51:
				if((weapon == "Nothing") && (gold >= bowPrice))
				{
					weapon = "Bow";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + bowAtkStats;
					hitChance = hitChance + bowMissChance;
					gold = gold - bowPrice;
					displayCharStats();
					system("cls");
					townOptions();
				}
				else if((weapon == "Broadsword") && (gold >= bowPrice))
				{
					weapon = "Bow";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + bowAtkStats;
					hitChance = hitChance - bowMissChance;
					gold = gold - bowPrice;
					displayCharStats();
					townOptions();
				}
				else if ((weapon == "Claymore") && (gold >= bowPrice))
				{
					weapon = "Bow";
					atk = ATK;
					hitChance = HITCHANCE;
					atk = atk + bowAtkStats;
					hitChance = hitChance - bowMissChance;
					gold = gold - bowPrice;
					displayCharStats();
					townOptions();
				}
				else 
				{
					cout << "Not enough gold" << endl;
					system("pause");
					return buyWeapon();
				}
				break;
			default:
				cout << "INVALID CHOICE" << endl;
		}
	}
	else if(storeChoice == 53)
	{
		char merchChoice = 00;
		char goBack = 00;
		system("cls");
		cout << "1.) " << pot << " - 50G" << endl;
		cout << "2.) " << clarity << " - 50G" << endl;
		cout << "3.) " << "Exit" << endl;

		cin >> merchChoice;
		switch(merchChoice)
		{
			case 49:
				if((count == 0) || (count == 1) || (count == 2) || (count == 3) || (count == 4))
				{
					if(gold >= potCost)
					{
						items[count] = pot;
						gold = gold - 50;
						cout << "You have purchased " << items[0] << endl;
					}
					else
					{
						cout << "You do not have enough gold" << endl;
						system("pause");
						return buyWeapon();
					}
					
					count++;
				}
				else
					cout << "Inventory is full, cannot by more items" << endl;
				
				break;
			case 50:
				if((count == 0) || (count == 1) || (count == 2) || (count == 3) || (count == 4))
				{
					
					if(gold >= potCost)
					{
						items[count] = clarity;
						gold = gold - 50;
						cout << "You have purchased " << items[0] << endl;
					}
					else
					{
						cout << "You do not have enough gold" << endl;
						system("pause");
						return buyWeapon();
					}
					count++;
				}
				else
					cout << "Inventory is full, cannot by more items" << endl;
				break;
			case 51:
				cout << "Go to town? (Y/N)" << endl;
				cin >> goBack;
				if((goBack == 89) || (goBack == 121))
				{
					system("cls");
					townOptions();
					break;
				}
				else if((goBack == 78) || (goBack == 110))
				{
					return buyWeapon();;
				}
				else
				{
					cout << "INVALID INPUT; Please try again" << endl;
				}
			default:
				cout << "INVALID INPUT!" << endl;
				return buyWeapon();
				break;
		}

		cout << "These are your items in your inventory: " << endl;
		for(int i = 0; i < itemsArray; i++)
		{
			cout << items[i]  << endl;
		}
		system("pause");
		townOptions();
	}
	else if(storeChoice == 54)
	{
		char back = 00;
		cout << "Go to town? (Y/N)" << endl;
		cin >> back;
		if((back == 89) || (back == 121))
		{
			system("cls");
			townOptions();
		}
		else if((back == 78) || (back == 110))
		{
			return buyWeapon();
		}
		else
		{
			cout << "INVALID INPUT; Please try again" << endl;
		}

	}
	else if(storeChoice > 54)
	{
		system("cls");
		cout << "INVALID CHOICE!!!" << endl;
		townOptions();
	}
	else
	{
		cout << "You already have a weapon. To change to another weapon, please choose option 4" << endl;
		system("pause");
		buyWeapon();
	}
}

void blacksmith()
{
	
	system("cls");
	cout << "Welcome to the Blacksmith" << endl;
	cout << "\nYour current weapon is " << weapon << endl;
	cout << "Your weapon's level is at " << weaponLevel << endl;
	cout << "\nEnhance Weapon for " << upgradeCost << " ? (Y/N)" << endl;
	
	char upgradeYN;
	cin >> upgradeYN;

	if(((gold < upgradeCost) && (weapon == "Broadsword")) || ((gold < upgradeCost) && (weapon == "Claymore")) || ((gold < upgradeCost) && (weapon == "Bow")))
	{
		cout << "You do not have enough gold to upgrade your weapons" << endl;
		system("pause");
		townOptions();
	}
	else if(((upgradeYN == 89) || (upgradeYN == 121)) && (weapon == "Broadsword"))
	{
		atk = atk + 2;
		cout << "You have upgraded your weapon for " << upgradeCost << " gold" << endl;
		gold = gold - upgradeCost;
		weaponLevel++;
		upgradeCost = upgradeCost + 10;
		system("cls");
		displayCharStats();
		townOptions();
	}
	else if(((upgradeYN == 89) || (upgradeYN == 121)) && (weapon == "Claymore"))
	{
		atk = atk + 4;
		cout << "You have upgraded your weapon for " << upgradeCost << " gold" << endl;
		gold = gold - upgradeCost;
		weaponLevel++;
		upgradeCost = upgradeCost + 10;
		system("cls");
		displayCharStats();
		townOptions();
	}
	else if(((upgradeYN == 89) || (upgradeYN == 121)) && (weapon == "Bow"))
	{
		atk = atk + 2;
		hitChance = hitChance + 5;
		cout << "You have upgraded your weapon for " << upgradeCost << " gold" << endl;
		gold = gold - upgradeCost;
		weaponLevel++;
		upgradeCost = upgradeCost + 10;
		displayCharStats();
		townOptions();
	}
	else if(weapon == "Nothing")
	{
		cout << "I cannot enhance a weapon that is not available" << endl;
		system("pause");
		system("cls");
		townOptions();
	}
	else if((upgradeYN == 78) || (upgradeYN == 110))
	{
		cout << "Goodbye Adventurer !" << endl;
		townOptions();
	}
}

void townOptions()
{
	char yn = 00;
	char townChoice = 48;
	system("cls");
	cout << "Welcome to the town of Stazzington, where adventurers like yourself starts his\njourney to become the best there is!\n" << endl;
	cout << "Stazzington offers multiple service that helps adventurers to get on their feet and start their quest\n" << endl;
	cout << "Select what you would like to do:\n1.) Shop\n2.) Blacksmith\n3.) Inn\n4.) Exit Town\n5.) Display Character Stats\n6.) Return to Main Menu" << endl;
	cin >> townChoice;

	switch(townChoice)
	{
		case 49: 
				buyWeapon();
				break;
		case 50:
				blacksmith();
				break;
		case 51:
				system("cls");
				cout << "Welcome to the Inn" << endl;
				cout << "Do you want to stay for the night to heal up for 10G? (Y/N)" << endl;
				cin >> yn;
				if((yn == 89) || (yn == 121))
				{
					if(gold >= 10)
					{
						hp = HP;
						gold = gold - 10;
						cout << "You have fully healed up" << endl;
						displayCharStats();
					}
					else
					{
						cout << "You do not have enough gold" << endl;
						system("pause");
						townOptions();
					}
				}
				else if((yn == 78) || (yn == 110))
				{
					return townOptions();
				}
				else
				{
					cout << "INVALID INPUT; Please try again" << endl;
				}
				
				break;
		case 52: system("cls");
				charMove();
				break;
		case 53: system("cls");
				displayCharStats();
				break;
		case 54: choice = 48;
				system("cls");
				menuChoice();
				break;
		default: system("cls");
				cout << "INVALID CHOICE !!! Please use the number of your selection!" << endl;
				return townOptions();
	}
}

void charMove()
{
	int rng = rand()%10+1;
	char charMovement = 00;
	char goBack = 00;

	system("cls");
	cout << "Enter the following " << " to move your character\n"  << "W = To go Up\nS = to go Down\nA = to go Left\nD = to go Right\nB = to go back to town" << endl;
	cin >> charMovement;
	switch(charMovement)
	{
		case 87: case 119:
			cout << "You moved upwards" << endl;
			if(rng > 5)
			{
				encounter();
			}
			else if(rng <= 5)
			{
				system("Pause");
				return charMove();
			}
			
			break;
		case 83: case 115:
			cout << "You moved downwards" << endl;
			if(rng > 5)
			{
				encounter();
			}
			else if(rng <= 5)
			{
				system("Pause");
				return charMove();
			}
			break;
		case 65: case 97:
			cout << "You moved to the left" << endl;
			if(rng > 5)
			{
				encounter();
			}
			else if(rng <= 5)
			{
				system("Pause");
				return charMove();
			}
			break;
		case 68: case 100:
			cout << "You moved to the right" << endl;
			if(rng > 5)
			{
				encounter();
			}
			else if(rng <= 5)
			{
				system("Pause");
				return charMove();
			}
			break;
		case 66: case 98:
			cout << "Go to town? (Y/N)" << endl;
			cin >> goBack;
			if((goBack == 89) || (goBack == 121))
			{
				system("cls");
				townOptions();
				break;
			}
			else if((goBack == 78) || (goBack == 110))
			{
				system("cls");
				return charMove();
			}
			else
			{
				cout << "INVALID INPUT; Please try again" << endl;
			}
		default:
			cout << "Invalid input! Please try again" << endl;
			charMove();
	}
}

